<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">
    <!--android:background="@android:drawable/dialog_holo_light_frame"-->

    <ImageView
        android:layout_width="15dp"
        android:layout_height="55dp"
        android:id="@+id/imageView2"
        android:src="@drawable/listitemcolor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Task Name"
        android:id="@+id/taskNameView"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Due Date"
        android:id="@+id/taskDueView"
        android:textColor="#8e8e8e"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/taskNameView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Work Date"
        android:id="@+id/taskSchedView"
        android:textColor="#8e8e8e"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/taskDueView"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Name"
        android:id="@+id/taskClassView"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:textColor="#8e8e8e"
        android:paddingRight="5dp"/>
    <!--<TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/taskCompletionView"
        android:text="Completed"
        android:layout_alignBottom="@+id/taskNameView"
        android:layout_alignStart="@+id/taskClassView" />-->


</RelativeLayout>